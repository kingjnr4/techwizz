<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Explore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/bold"
            android:text="Home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/add_league_card"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/league_bg"
                >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:drawableTop="@drawable/trophy_48px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="Add league" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_country_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:padding="12dp"
                android:background="@drawable/league_bg_1"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flag_48px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="Add country" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/add_team_card"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/add_player_bg"
                >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:drawableTop="@drawable/group_work_48px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="Add Team" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_player_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:padding="12dp"
                android:background="@drawable/add_img"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/taunt_48px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="Add Player" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="Recent Feedbacks"
                    android:textStyle="bold"
                    android:textColor="@color/font_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:text="View all"
                    android:drawableEnd="@drawable/chevron_right_48px" />


            </LinearLayout>

            <include layout="@layout/feedback_item" />
            <include layout="@layout/feedback_item" />
            <include layout="@layout/feedback_item" />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>