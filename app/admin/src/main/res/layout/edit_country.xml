<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:background="@color/background"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fix_back_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/chevron_left_48px"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >



        <ImageView
            android:padding="8dp"
            android:id="@+id/new_country_logo"
            android:layout_width="120dp"
            android:background="@drawable/item_bg_2"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Click the box above to add flag" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Enter country name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:id="@+id/country_field"
                android:textSize="13dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            app:cornerRadius="5dp"
            android:fontFamily="@font/bold"
            android:id="@+id/save_country_edit_btn"
            android:layout_marginRight="5dp"
            android:text="Save"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                app:cornerRadius="5dp"
                android:fontFamily="@font/bold"
                android:id="@+id/remove_country_btn"
                android:layout_marginLeft="5dp"
                android:text="Remove"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>