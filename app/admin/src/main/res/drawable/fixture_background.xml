<!-- item_background.xml -->

<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <solid android:color="@color/item_list" />
    <corners android:radius="8dp" />
    <stroke
        android:color="@color/item_list_border"
        android:width="1dp" />

    <!-- Add margin bottom -->
    <padding
        android:left="10dp"
        android:top="12dp"
        android:right="10dp"
        android:bottom="12dp" /> <!-- Adjust the value of '8dp' as per your requirement -->
</shape>